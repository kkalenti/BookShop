@model Section

@{
    ViewData["Title"] = "SectionDetails";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">@Model.Title</h1>
        <h5>@Model.Description</h5>
    </div>
</section>

<h2 class="text text-center">Books' List</h2>
<div class="container marketing">
    <div class="row mt-5 mb-2">
        @foreach (var item in Model.BookSection.Select(sc => sc.Book).ToList())
        {
            <div class="col-lg-4">
                <img class="img-thumbnail" src="~/Images/@item.Image" alt="@item.Title" width="140">
                <h5>@item.Title</h5>
                <p><a class="btn btn-secondary" href="/home/details/@item.Id" role="button">View details »</a></p>
            </div><!-- /.col-lg-4 -->
        }
    </div>
</div>
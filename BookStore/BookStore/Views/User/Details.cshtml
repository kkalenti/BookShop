@using Microsoft.EntityFrameworkCore
@model BookStore.ViewModels.User.UserViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<h1>Details</h1>
<div class="container">
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Phone)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
        </dl>
</div>
<div class="container">
    <form asp-action="Details">
        <div class="form-group row">
            <label class="col-sm-2 font-weight-bold">Is the user locked out</label>
            <div class="col-sm-10">
                @Html.CheckBoxFor(x => Model.IsLockedOut)
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 font-weight-bold">User in the role</label>
            @for (var i = 0; i < Model.UserInRole.Count; i++)
            {
                <div class="col-sm-1">
                    @Html.HiddenFor(x => Model.UserInRole[i].Id)
                    @Html.CheckBoxFor(x => Model.UserInRole[i].Selected)
                    <label class="form-check-label"> @Model.UserInRole[i].Name</label>
                </div>
            }
        </div>
        <input type="submit" value="Update" class="btn btn-success"/>
    </form>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
